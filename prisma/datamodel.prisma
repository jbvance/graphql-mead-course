type User {
  id: ID! @id
  name: String!
  email: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  posts: [Post!]!
}

type Post {
   id: ID! @id
   title: String!
   body: String! 
   published: Boolean!
   author: User!
}

type Comment {
  id: ID! @id
  text: String!
  author: User!
  post: Post!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
